<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1>New Category</h1>

      <%= form_with(model: @category, local: true, html: { class: "needs-validation", novalidate: true }) do |form| %>
        <div class="mb-3">
          <%= form.label :name, class: "form-label" %>
          <%= form.text_field :name, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :icon, class: "form-label" %>
          <%= form.text_field :icon, class: "form-control", required: true %>
        </div>

        <div class="text-center">
          <%= form.submit 'Create Category', class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= link_to 'Back', categories_path, class: "btn btn-secondary mt-3" %>
    </div>
  </div>
</div>
